{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true, // for typeorm
    "emitDecoratorMetadata": true // for typeorm
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
