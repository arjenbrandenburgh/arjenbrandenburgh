if github.highlightedRepos && github.highlightedRepos.length
  br
  each repo in github.highlightedRepos
    a(href='https://github.com/' + github.username + '/' + repo)
      img(align='center' src='https://github-readme-stats.vercel.app/api/pin/?username=' + github.username + '&repo=' + repo + '&title_color=' + github.colors.title + '&text_color=' + github.colors.text + '&icon_color=' + github.colors.icon + '&bg_color=' + github.colors.background)
